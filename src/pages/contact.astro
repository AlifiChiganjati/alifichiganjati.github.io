---
import BaseLayout from "../layouts/BaseLayout.astro";
import { FaGithub, FaInstagram, FaLinkedin } from "react-icons/fa";
---

<BaseLayout title="Contact" description="Contact Page">
  <section class="mx-auto mt-10 max-w-5xl px-4">
    <div class="grid grid-cols-1 gap-10 md:grid-cols-2">
      <div class="flex flex-col justify-center">
        <h2 class="text-2xl font-bold">Let’s Connect</h2>

        <p class="mt-4 text-base leading-relaxed text-(--text-secondary)">
          I’m always interested in discussing system design, backend
          architecture, or impactful software projects. If you think we can
          build something better, let’s connect.
        </p>
        <div class="mt-6 grid grid-cols-3 sm:max-w-md">
          <a
            href="https://github.com/AlifiChiganjati"
            class="flex items-center justify-center transition hover:scale-110"
            target="_blank"
          >
            <FaGithub className="mx-2 text-4xl" />
          </a>
          <a
            href="https://www.linkedin.com/in/alifi-chiganjati"
            class="flex items-center justify-center transition hover:scale-110"
            target="_blank"
          >
            <FaLinkedin className="mx-2 text-4xl" />
          </a>
          <a
            href="https://www.instagram.com/alifi_chiganjati"
            class="flex items-center justify-center transition hover:scale-110"
            target="_blank"
          >
            <FaInstagram className="mx-2 text-4xl" />
          </a>
        </div>
      </div>

      <div class="">
        <form class="flex flex-col items-center gap-4">
          <div class="flex w-full flex-col gap-2">
            <label for="name" class="text-base font-bold capitalize">
              nama
            </label>
            <input
              id="name"
              type="text"
              placeholder="Joe Doe"
              class="text-dark w-full rounded-md border-2 border-(--border-strong) bg-(--bg-surface-muted) p-3 focus:border-(--border-strong) focus:ring-1 focus:ring-(--border-strong) focus:outline-none"
            />
          </div>
          <div class="flex w-full flex-col gap-2">
            <label
              for="email"
              class="text-primary dark:text-dark-light text-base font-bold capitalize"
            >
              email
            </label>
            <input
              id="email"
              type="email"
              placeholder="example@email.com"
              class="text-dark w-full rounded-md border-2 border-(--border-strong) bg-(--bg-surface-muted) p-3 focus:border-(--border-strong) focus:ring-1 focus:ring-(--border-strong) focus:outline-none"
            />
          </div>
          <div class="flex w-full flex-col gap-2">
            <label for="pesan" class="text-base font-bold capitalize">
              Pesan
            </label>
            <textarea
              name="pesan"
              id="pesan"
              cols="30"
              rows="10"
              placeholder="Input Your Message Here..."
              class="text-dark w-full rounded-md border-2 border-(--border-strong) bg-(--bg-surface-muted) p-3 focus:border-(--border-strong) focus:ring-1 focus:ring-(--border-strong) focus:outline-none"
            ></textarea>
          </div>
          <div class="flex w-full items-center justify-center">
            <button
              class="w-full rounded-full bg-(--border-default) px-8 py-3 text-base font-semibold shadow transition duration-500 hover:bg-(--border-strong) hover:shadow-lg"
            >
              Kirim
            </button>
          </div>
        </form>
      </div>
    </div>
  </section>
</BaseLayout>
