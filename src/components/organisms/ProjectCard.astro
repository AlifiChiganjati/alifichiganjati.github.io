---
interface Props {
  href?: string;
  target?: string;
}
const { href: hrefName = "#", target: targetName = "_blank" } = Astro.props;
---

<a
  href={hrefName}
  target={targetName}
  class="projects hidden min-h-120 max-w-sm flex-col overflow-hidden rounded-lg border p-4 shadow-lg xl:max-w-md"
>
  <slot name="image-project" />
  <div class="my-2 h-0.5 w-full bg-(--accent)"></div>

  <div class="flex flex-1 flex-col space-y-4">
    <slot name="content-project" />

    <div class="mt-auto">
      <slot name="skill-project" />
    </div>
  </div>
</a>
